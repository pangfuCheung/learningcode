<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yb.cheung.ibatis.dao.DeptDao">

    <select id="findAll" resultMap="com.yb.cheung.ibatis.bean.Dept">
       select * from dept where 1=1
    </select>

    <select id="findDeptByNo" resultMap="com.yb.cheung.ibatis.bean.Dept">
       select * from dept where 1=1 AND deptno = #{deptno}
    </select>

</mapper>